{
  "name": "middle.messenger.praktikum.yandex",
  "description": "Messanger",
  "default": "index.html",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "Kharitonov Sergey",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite --open",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "start": "npm run build && node app.js",
    "format": "prettier --write .",
    "lint": "stylelint \"**/*.scss\" && eslint . --ext .ts",
    "test": "mocha --es-module-specifier-resolution=node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@types/chai": "4.3.17",
    "@types/jsdom": "21.1.7",
    "@types/mocha": "10.0.7",
    "@types/node": "22.1.0",
    "@types/sinon": "17.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "chai": "5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "^2.29.1",
    "express": "4.19.2",
    "handlebars": "4.7.8",
    "husky": "9.1.4",
    "jsdom": "24.1.1",
    "mocha": "10.7.0",
    "prettier": "3.2.5",
    "sass": "1.69.5",
    "sinon": "18.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "10.9.2",
    "typescript": "^5.5.2",
    "uuid": "^10.0.0",
    "vite": "5.3.5"
  },
  "dependencies": {
    "vite-plugin-checker": "0.6.4"
  },
  "eslintIgnore": [
    "**/*.scss"
  ]
}
